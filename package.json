{
  "name": "monorepo-hono-react",
  "version": "1.0.0",
  "description": "Monorepo with Hono backend and React + Vite frontend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run dev:backend & npm run dev:frontend",
    "dev:backend": "npm --prefix packages/backend run dev",
    "dev:frontend": "npm --prefix packages/frontend run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "npm --prefix packages/backend run build",
    "build:frontend": "npm --prefix packages/frontend run build",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "npm --prefix packages/backend run lint",
    "lint:frontend": "npm --prefix packages/frontend run lint",
    "format": "prettier --write .",
    "typecheck": "npm run typecheck:backend && npm run typecheck:frontend",
    "typecheck:backend": "npm --prefix packages/backend run typecheck",
    "typecheck:frontend": "npm --prefix packages/frontend run typecheck",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:status": "docker compose ps",
    "docker:clean": "docker compose down -v",
    "init-env": "cp -n packages/backend/.env.example packages/backend/.env; cp -n packages/frontend/.env.example packages/frontend/.env; true",
    "setup": "pnpm init-env && pnpm docker:up"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=8"
  }
}
